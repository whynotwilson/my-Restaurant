<!-- views/login.handlebars -->

<div class="row mt-5">
  <div class="col-md-4 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Login</h1>
      {{!-- 引用 message 這個 partial view (給使用者提示訊息) --}}
      {{> messages}}
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input required='required' type="email" id="email" name="email" class="form-control"
            placeholder="Enter Email" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input required='required' type="password" id="password" name="password" class="form-control"
            placeholder="Enter Password" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
        <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>