{{!-- ./views/edit.handlebars --}}
<h1 class="mb-1 ">修改</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <form method="POST" action="/restaurants/{{{restaurant._id}}}?_method=PUT">
        <div class="form-group">
          <label for="inputName"><strong>中文名稱</strong></label>
          <input type="text" class="form-control" id="inputName" name="name" placeholder="中文名稱"
            value="{{{ restaurant.name }}}">
        </div>

        <div class="form-group">
          <label for="inputEnName"><strong>英文名稱</strong></label>
          <input type="text" class="form-control" id="inputEnName" name="name_en" placeholder="英文名稱"
            value="{{{ restaurant.name_en }}}">
        </div>

        <div class="form-group">
          <label for="inputcategory"><strong>料理種類</strong></label>
          <input type="text" class="form-control" name="category" id="inputcategory" placeholder="料理種類"
            value="{{{ restaurant.category }}}">
        </div>

        <div class="form-group">
          <label for="Imgwebsite"><strong>圖片網址</strong></label>
          <input type="text" class="form-control" id="Imgwebsite" name="image" placeholder="圖片網址"
            value="{{{ restaurant.image }}}">
        </div>

        <div class="form-group">
          <label for="inputLocation"><strong>地址</strong></label>
          <input type="text" class="form-control" id="inputLocation" name="location" placeholder="地址"
            value="{{{ restaurant.location }}}">
        </div>

        <div class="form-group">
          <label for="inputPhone"><strong>電話</strong></label>
          <input type="text" class="form-control" id="inputPhone" placeholder="電話" name="phone"
            value="{{{ restaurant.phone }}}">
        </div>

        <div class="form-group">
          <label for="googleMap"><strong>Google Map 網址</strong></label>
          <input type="text" class="form-control" id="googleMap" placeholder="Google Map 網址" name="google_map"
            value="{{{ restaurant.google_map }}}">
        </div>

        <div class="form-group">
          <label for="inputRating"><strong>評價</strong></label>
          <input type="number" class="form-control" id="inputRating" placeholder="評價" name="rating" step="0.1" min="0"
            max="5" value="{{{ restaurant.rating }}}">
        </div>

        <div class="form-group">
          <label for="inputDescription"><strong>描述</strong></label>
          <input type="text" class="form-control" id="inputDescription" placeholder="描述" name="description"
            value="{{{ restaurant.description }}}">
        </div>
        <button class="btn btn-primary" type="submit">修改</button>
      </form>
    </div>
  </div>
</div>